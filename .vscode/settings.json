{  
  // Must install eslint vscode extension for this to work correctly
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": true,
  "eslint.format.enable": true,
   // Makes sure prettier is not default formatter
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },


  "editor.tabSize": 2,
  "eslint.workingDirectories": [
    {
      "pattern": "packages/*/"
    }
  ]
}
