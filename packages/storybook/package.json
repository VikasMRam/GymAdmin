{
  "name": "@sly-react/storybook",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm i --package-lock-only",
    "lint": "../../node_modules/.bin/eslint .",
    "test": "../../node_modules/.bin/jest --passWithNoTests",
    "prestart:mobile:android": "rnstl",
    "prestart:mobile:ios": "rnstl",
    "start": "start-storybook -s ../web/public -p 9001 -c src",
    "start:mobile:android": "cd ../mobile && npm run android:storybook",
    "start:mobile:ios": "cd ../mobile && npm run ios:storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "5.3.19",
    "@storybook/addons": "5.3.19",
    "@storybook/react": "5.3.19",
    "@storybook/react-native": "5.3.19",
    "@storybook/addon-ondevice-actions": "5.3.19",
    "react-native-storybook-loader": "2.0.1"
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "../common",
        "../mobile"
      ],
      "pattern": "**/*.stories.native.js",
      "outputFile": "./src/mobile/storyLoader.js"
    }
  }
}
