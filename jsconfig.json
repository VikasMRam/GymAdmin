{
  "compilerOptions": {
    "module": "commonJS",
    "jsx": "react",
    "checkJs": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "sly/web/*": ["./packages/web/src/*"],
      "sly/common/*": ["./packages/common/src/*"],
      "sly/mobile/*": ["./packages/mobile/src/*"],
      "sly/storybook/*": ["./packages/storybook/src/*"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "dist", "packages/mobile", "packages/*/node_modules"]
}
